<!-- ==================== PAGE TITLE ==================== -->
<section class="page-title light-background py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-5 fw-bold mb-3" data-aos="fade-right" data-aos-delay="100">
                    <i class="bi bi-award text-primary me-3"></i>Sertifikalarımız
                </h1>
                <p class="lead text-muted mb-0" data-aos="fade-right" data-aos-delay="150">
