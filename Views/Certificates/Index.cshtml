    </div>
</section>
<!-- /PAGE TITLE -->
<!-- ==================== CERTIFICATES INTRO ==================== -->
<section class="certificates-intro py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center" data-aos="fade-up">
                <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill mb-3">
                    <i class="bi bi-patch-check me-1"></i> Kalite Güvencesi
                </span>
                <h2 class="display-6 fw-bold mb-4">Kalitemizi Belgeliyoruz</h2>
                <p class="text-muted lead mb-0">
                    Marmara Hijyen olarak üretim süreçlerimizde en yüksek kalite standartlarını uyguluyoruz.
                    <strong>ISO, CE, GMP ve TSE</strong> gibi uluslararası sertifikalarımız, ürünlerimizin
                    güvenilirliğini ve kalitesini tescillemektedir.
                </p>
            </div>
        </div>
    </div>
</section>
<!-- /CERTIFICATES INTRO -->
<!-- ==================== CERTIFICATES GRID ==================== -->
<section class="certificates-grid py-5 light-background">
    <div class="container">

        <!-- Başlık -->
        <div class="text-center mb-5" data-aos="fade-up">
            <h3 class="fw-bold mb-3">Belgelerimiz</h3>
            <p class="text-muted">Sertifikalarımızı görüntülemek için tıklayın</p>
        </div>

        <!-- Certificates Gallery -->
        <div class="row g-4">

            @for (int i = 1; i <= 11; i++)
            {
                string certName = "";
                string certType = "";

                if (i == 1)
                {
                    certName = "Bilgi Güvenliği Yönetim Sistemi";
                    certType = "ISO 27001:2022";
                }
                else if (i == 2)
                {
                    certType = "TS EN ISO 50001:2018";
                    certName = "Enejeri Yönetim Sistemi";
                }
                else if (i == 3)
                {
                    certType = "ISO 45001:2018";
                    certName = "İş Sağlığı ve Güvenliği Sistemi Yönetimi";
                }
                else if (i == 4)
                {
                    certType = "ISO 22716:2013 GMP";
                    certName = "İyi Üretim Uygulamaları";
                }
                else if (i == 5)
                {
                    certType = "ISO 9001:14001";
                    certName = "Uygunluk Beyanı";
                }
                else if (i == 6)
                {
                    certType = "ISO 45001:2018";
                    certName = "İş Sağlığı ve Güvenliği Yönetim Sistemi";
                }
                else if (i == 7)
                {
                    certType = "ISO 31000";
                    certName = "Risk Yönetimi Sistemi";
                }
                else if (i == 8)
                {
                    certType = "ISO 14001:2015";
                    certName = "Çevre Yönetimi Sistemi";
                }
                else if (i == 9)
                {
                    certType = "ISO 9001:2015";
                    certName = "Kalite Yönetim Sistemi";
                }
                else if (i == 10)
                {
                    certType = "ISO 10002:2018";
                    certName = "Müşteri Memnuniyet Yönetim Sistemi";
                }
                else if (i == 11)
                {
                    certType = "TS EN ISO 13485:2016";
                    certName = "Tıbbi Cihazlar Yönetim Sistemi";
                }

                <div class="col-6 col-md-4 col-lg-3" data-aos="zoom-in" data-aos-delay="@((i - 1) * 50)">
                    <div class="certificate-item">
                        <a href="~/Certificates/@(i).png"
                           class="glightbox"
                           data-gallery="certificates-gallery"
                           data-glightbox="title: @certName; description: @certType">
                            <div class="certificate-card">
                                <div class="certificate-image">
                                    <img src="~/Certificates/@(i).png"
                                         alt="@certName - @certType"
                                         class="img-fluid"
                                         loading="lazy">
                                    <div class="certificate-overlay">
                                        <i class="bi bi-zoom-in fs-1"></i>
                                        <p class="mt-2 mb-0">Görüntüle</p>
                                    </div>
                                </div>
                                <div class="certificate-footer">
                                    <h6 class="mb-0 fw-bold">@certName</h6>
                                    <small class="text-muted">@certType</small>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
<!-- /CERTIFICATES GRID -->
