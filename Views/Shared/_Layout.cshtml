@{
    // Aktif kültür
    var culture = ViewBag.Culture?.ToString() ?? "tr";

    // Mevcut path
    var path = Context.Request.Path.ToString();

    // Başlangıçtaki dil prefix'ini temizle (/en, /ru, /ar vs)
    var cleanPath = path;

if (culture != "tr" && path.StartsWith($"/{culture}"))
{
    cleanPath = path.Substring(culture.Length + 1);
    if (string.IsNullOrEmpty(cleanPath))
    {
        cleanPath = "/";
    }
}

// slash normalize
cleanPath = cleanPath.StartsWith("/") ? cleanPath : "/" + cleanPath;

    // Canonical base
    var canonicalBase = culture == "tr"
        ? "https://www.marmarahijyen.com"
        : $"https://www.marmarahijyen.com/{culture}";

    // Final canonical URL
    var fullUrl = $"{canonicalBase}{cleanPath}";

    // Aktif dil adı
    var currentLang = culture switch
    {
        "en" => "English",
        "zh" => "中文",
        "ru" => "Русский",
        "ar" => "العربية",
        _ => "Türkçe"
    };

    // Bayrak
    var currentFlag = culture switch
    {
        "en" => "🇬🇧",
        "zh" => "🇨🇳",
        "ru" => "🇷🇺",
        "ar" => "🇸🇦",
        _ => "🇹🇷"
    };
}


