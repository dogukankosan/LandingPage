<section class="error-page min-vh-100 d-flex align-items-center py-5" style="background: linear-gradient(135deg, #f0f7ff 0%, #e0ecff 100%);">
    <div class="container">
        <div class="row align-items-center justify-content-center">

            <!-- Sol - 404 Animasyonu -->
            <div class="col-lg-6 text-center mb-5 mb-lg-0" data-aos="fade-right">
                <div class="error-illustration position-relative">
                    <!-- Büyük 404 -->
                    <div class="error-number">
                        <span class="digit">4</span>
                        <span class="digit zero">
                            <div class="zero-inner">
                                <i class="bi bi-emoji-dizzy"></i>
                            </div>
                        </span>
                        <span class="digit">4</span>
                    </div>

                    <!-- Floating Elements -->
                    <div class="floating-elements">
                        <div class="float-item item-1"><i class="bi bi-file-earmark-x"></i></div>
                        <div class="float-item item-2"><i class="bi bi-question-circle"></i></div>
                        <div class="float-item item-3"><i class="bi bi-search"></i></div>
                        <div class="float-item item-4"><i class="bi bi-exclamation-triangle"></i></div>
                    </div>
                </div>
            </div>

            <!-- Sağ - İçerik -->
            <div class="col-lg-6" data-aos="fade-left">
                <div class="error-content text-center text-lg-start">
                    <span class="badge bg-danger bg-opacity-10 text-danger px-4 py-2 rounded-pill mb-4 fs-6">
                        <i class="bi bi-exclamation-circle me-2"></i>Hata 404
                    </span>

                    <h1 class="display-4 fw-bold mb-4" style="color: #1e3a8a;">
                        Oops! Sayfa<br>Bulunamadı
                    </h1>

                    <p class="lead text-muted mb-4">
                        Aradığınız sayfa taşınmış, silinmiş veya hiç var olmamış olabilir.
                        Endişelenmeyin, sizi doğru yere yönlendirebiliriz!
                    </p>

                    <!-- Öneriler -->
                    <div class="suggestions bg-white rounded-4 p-4 shadow-sm mb-4">
                        <h6 class="fw-bold mb-3"><i class="bi bi-lightbulb text-warning me-2"></i>Bunları deneyebilirsiniz:</h6>
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2">
                                <i class="bi bi-check2 text-success me-2"></i>
                                URL adresini kontrol edin
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-check2 text-success me-2"></i>
                                Ana sayfaya dönün
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-check2 text-success me-2"></i>
                                Ürünlerimizi inceleyin
                            </li>
                            <li class="mb-0">
                                <i class="bi bi-check2 text-success me-2"></i>
                                Bizimle iletişime geçin
                            </li>
                        </ul>
                    </div>

                    <!-- Butonlar -->
                    <div class="d-flex flex-wrap gap-3 justify-content-center justify-content-lg-start">
                        <a href="~/" class="btn btn-primary btn-lg px-4">
                            <i class="bi bi-house me-2"></i>Ana Sayfa
                        </a>
                        <a href="~/Products" class="btn btn-outline-primary btn-lg px-4">
                            <i class="bi bi-grid me-2"></i>Ürünler
                        </a>
                        <a href="~/Contact" class="btn btn-outline-secondary btn-lg px-4">
                            <i class="bi bi-envelope me-2"></i>İletişim
                        </a>
                    </div>

                    <!-- Destek -->
                    <div class="mt-5 pt-4 border-top">
                        <p class="text-muted mb-2">
                            <i class="bi bi-headset me-2"></i>Yardıma mı ihtiyacınız var?
                        </p>
                        <a href="tel:+905337270293" class="text-primary text-decoration-none fw-bold fs-5">
                            <i class="bi bi-telephone-fill me-2"></i>+90 533 727 02 93
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

<style>
    /* ===== Error Page Styles ===== */
    .error-page {
        overflow: hidden;
    }

    /* 404 Number */
    .error-number {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

        .error-number .digit {
            font-size: 180px;
            font-weight: 800;
            color: #1e40af;
            line-height: 1;
            text-shadow: 4px 4px 0 #dbeafe;
            animation: bounce 2s ease-in-out infinite;
        }

            .error-number .digit:nth-child(1) {
                animation-delay: 0s;
            }

            .error-number .digit:nth-child(3) {
                animation-delay: 0.4s;
            }

        .error-number .zero {
            position: relative;
            width: 150px;
            height: 150px;
            background: linear-gradient(135deg, #3b82f6 0%, #1e40af 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            animation: spin 10s linear infinite;
            box-shadow: 0 20px 50px rgba(59, 130, 246, 0.3);
        }

    .zero-inner {
        width: 100px;
        height: 100px;
        background: #f0f7ff;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .zero-inner i {
            font-size: 50px;
            color: #1e40af;
            animation: dizzy 2s ease-in-out infinite;
        }

    /* Floating Elements */
    .floating-elements {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
    }

    .float-item {
        position: absolute;
        width: 50px;
        height: 50px;
        background: #fff;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        animation: float 4s ease-in-out infinite;
    }

        .float-item i {
            font-size: 24px;
            color: #64748b;
        }

    .item-1 {
        top: 10%;
        left: 10%;
        animation-delay: 0s;
    }

    .item-2 {
        top: 20%;
        right: 15%;
        animation-delay: 1s;
    }

    .item-3 {
        bottom: 20%;
        left: 15%;
        animation-delay: 2s;
    }

    .item-4 {
        bottom: 10%;
        right: 10%;
        animation-delay: 3s;
    }

    /* Animations */
    @@keyframes bounce {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-20px);
        }
    }

    @@keyframes spin {
        from {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }
    }

    @@keyframes dizzy {
        0%, 100% {
            transform: rotate(-10deg);
        }

        50% {
            transform: rotate(10deg);
        }
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0) rotate(0deg);
        }

        50% {
            transform: translateY(-20px) rotate(10deg);
        }
    }

    /* Suggestions Box */
    .suggestions {
        border-left: 4px solid #3b82f6;
    }

    /* Responsive */
    @@media (max-width: 991px) {
        .error-number .digit {
            font-size: 120px;
        }

        .error-number .zero {
            width: 100px;
            height: 100px;
        }

        .zero-inner {
            width: 70px;
            height: 70px;
        }

            .zero-inner i {
                font-size: 35px;
            }

        .float-item {
            width: 40px;
            height: 40px;
        }

            .float-item i {
                font-size: 18px;
            }
    }

    @@media (max-width: 576px) {
        .error-number .digit {
            font-size: 80px;
        }

        .error-number .zero {
            width: 70px;
            height: 70px;
        }

        .zero-inner {
            width: 50px;
            height: 50px;
        }

            .zero-inner i {
                font-size: 25px;
            }

        .error-content h1 {
            font-size: 2rem;
        }
    }
</style>