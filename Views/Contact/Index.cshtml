@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('contactForm');
            const submitBtn = document.getElementById('submitBtn');
            const btnText = submitBtn.querySelector('.btn-text');
            const btnLoading = submitBtn.querySelector('.btn-loading');
            const messageField = document.querySelector('textarea[name="Message"]');
            const charCount = document.getElementById('charCount');
            const timestampField = document.getElementById('formTimestamp');

            // Bot protection timestamp
            timestampField.value = Date.now();

            // Char counter
            if (messageField && charCount) {
                messageField.addEventListener('input', function() {
                    charCount.textContent = this.value.length;
                });
            }

            // Form submit
            form.addEventListener('submit', function(e) {
                // Honeypot check
                const honeypot = form.querySelector('input[name="website"]');
                if (honeypot && honeypot.value !== '') {
                    e.preventDefault();
                    return false;
                }

                // Time check (min 3 sec)
                const submitTime = Date.now();
                const loadTime = parseInt(timestampField.value);
                if ((submitTime - loadTime) < 3000) {
                    e.preventDefault();
                    alert('Lütfen formu dikkatlice doldurunuz.');
                    return false;
                }

                // Validation
                if (!form.checkValidity()) {
                    e.preventDefault();
                    const invalidFields = form.querySelectorAll(':invalid');
                    invalidFields.forEach(f => f.classList.add('is-invalid'));
                    if (invalidFields.length > 0) invalidFields[0].focus();
                    return false;
                }

                // Loading
                submitBtn.disabled = true;
                btnText.classList.add('d-none');
                btnLoading.classList.remove('d-none');
            });

            // Clear invalid on input
            form.querySelectorAll('.form-control, .form-select').forEach(field => {
                field.addEventListener('input', function() {
                    this.classList.remove('is-invalid');
                    if (this.checkValidity()) this.classList.add('is-valid');
                });
            });
        });
    </script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
